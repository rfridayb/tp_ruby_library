<div class="flex justify-center">
  <div class="shadow-lg py-8 px-16">
  <h2 class="text-2xl font-bold">Log In</h2>
  <%= form_tag '/login' do %>
    <div class="my-8">
      <div class="mb-4"><p class="mb-2">Username:</p><%= text_field_tag :username, nil, placeholder: 'Username', class: 'border-2 border-slate-200'%></div>
      <div><p class="mb-2">Password:</p> <%= password_field_tag :password, nil, placeholder: 'Password', class: 'border-2 border-slate-200' %></div>
    </div>
    <div>
      <%= submit_tag 'Login', class: 'bg-slate-200 py-3 px-5 uppercase hover:bg-sky-400' %>
    </div>
  <%end%>
  </div>
</div>