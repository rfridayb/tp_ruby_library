<div class="flex justify-center">
  <div class="shadow-lg py-8 px-16">
    <h2 class="text-2xl font-bold">Register</h2>
    <%= form_for @user do |f| %>
      <div class="my-8">
        <div class="mb-4"><p class="mb-2"><%= f.label :username %></p><%= f.text_field :username, placeholder: 'Username', class: 'border-2 border-slate-200'%></div>
        <div><p class="mb-2"><%= f.label :password %></p> <%= f.password_field :password, placeholder: 'Password', class: 'border-2 border-slate-200' %></div>
      </div>
      <div>
        <%= f.submit 'Register', class: 'bg-slate-200 py-3 px-5 uppercase hover:bg-sky-400' %>
      </div>
    <%end%>
  </div>
</div>
